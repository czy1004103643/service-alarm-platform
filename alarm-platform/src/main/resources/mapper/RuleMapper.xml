<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.newegg.ec.tool.dao.RuleDao">

    <select id="selectRulesByUrlId" parameterMap="java.lang.String">
        SELECT
          *
        FROM
          rule
        WHERE
          url_id = #{urlId}
    </select>

    <insert id="addRule" parameterMap="Rule">
        INSERT INTO
            rule
        VALUES (
            rule_id = #{ruleId}
            url_id = #{urlId}
            formula = #{formula}
            alias = #{alias}
            update_time = #{updateTime}
        )
    </insert>

    <update id="updateRule" parameterType="Rule">
        UPDATE
            rule
        SET
            url_id = #{urlId}
            formula = #{formula}
            alias = #{alias}
            update_time = #{updateTime}
        WHERE
            rule_id = #{ruleId}
    </update>

    <delete id="deleteRuleByRuleId" parameterType="java.lang.String">
        DELETE FROM
            rule
        WHERE
            rule_id = #{ruleId}
    </delete>

    <delete id="deleteRuleByRuleId" parameterType="java.lang.String">
        DELETE FROM
            rule
        WHERE
            url_id = #{urlId}
    </delete>
</mapper>
